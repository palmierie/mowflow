<div class="row">
  <%= render :partial => 'partials/dashboard' %>

  <div class="col-xs-8 offset-md-1">
    <div class="row">
      <div class="col-md-12 text-center">
        <div class="well controls">
          <%= link_to calendar_path(date: @date - 1.month), class: "btn btn-default" do %>
            <p><</p>
          <% end %>
          <%= "#{@date.strftime("%B")} #{@date.year}" %>
          <%= link_to calendar_path(date: @date + 1.month), class: "btn btn-default" do %>
            <p>></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= calendar @date do |date| %>
          <% if date.day < 5 || date.day > 27 %>
            <%= "#{date.day} #{date.strftime("%b")}" %>
          <% else %>
            <%= date.day %>
          <% end %>
           <% if @jobs_by_date[date] %>
            <ul>
              <% @jobs_by_date[date].each do |job| %>
                <li><%= link_to "#{job.location_desc}", scheduled_location_path(job.id) %></li>
              <% end %>
            </ul>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>