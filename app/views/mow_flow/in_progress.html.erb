<div class="row">
  <%= render :partial => 'partials/dashboard' %>

  <div class="col-sm-8 offset-md-1">
    <% if @previous_jobs.length > 0 %>
      <h1>Previous Work</h1>
      <h5>Please update status:</h5>
      <div class="row">
        <div class="col-sm-8">
          <%= form_for :in_progress, url: save_progress_path do |f| %>
            
            <% @previous_jobs.each do |job| %>
            
              <%= job.location_desc %> |
              <%= "#{job.street_address}, #{job.city}, #{job.state}" %>
              <div class="field">
                <%= f.label 'Work Status' %>
                <%= select_tag "#{job.id}", options_for_select(@prev_in_prog_options) %>
              </div>
              
            <% end %>

            <div class="actions">
              <%= f.submit "Update" %>
            </div>

          <% end %>
        </div>
      </div>
    <% end %>

    <h1>Work In Progress</h1>
    <div class="row">
      <div class="col-sm-8">
        <%= form_for :in_progress, url: save_progress_path do |f| %>
          
          <% @jobs.each do |job| %>
          
            <%= job.location_desc %> |
            <%= "#{job.street_address}, #{job.city}, #{job.state}" %>
            <div class="field">
              <%= f.label 'Work Status' %>
              <%= select_tag "#{job.id}", options_for_select(@in_prog_options) %>
            </div>
            
          <% end %>

          <div class="actions">
            <%= f.submit "Update" %>
          </div>

        <% end %>
      </div>
      <div class="col-sm-4">
        <h2>Show de map</h2>
        <%= link_to 'Print List', print_list_path(format: "pdf") %>
      </div>
    </div>
    
  </div>
</div>