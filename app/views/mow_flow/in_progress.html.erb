<div class="row">
  <%= render :partial => 'partials/dashboard' %>

  <div class="col-sm-8 offset-md-1">
    <% if @previous_jobs.length > 0 %>
      <h1>Previous Work</h1>
      <h5>Please update status immediately:</h5>
      <div class="row">
        <div class="col-sm-8">
          <%= form_for :in_progress, url: save_progress_path do |f| %>
            
            <% @previous_jobs.each do |job| %>
            
              <%= job.location_desc %> |
              <%= "#{job.street_address}, #{job.city}, #{job.state}" %>
              <div class="field">
                <%= f.label 'Work Status' %>
                <%= select_tag "#{job.id}", options_for_select(@prev_in_prog_options) %>
              </div>
              
            <% end %>

            <div class="actions">
              <%= f.submit "Update", :class => 'btn btn-primary' %>
            </div>

          <% end %>
        </div>
      </div>
      <div class="col-sm-12">
        <div style='border-bottom:4px solid #2f4f4f; margin-top:10px; margin-bottom:10px;'></div>
      </div>
    <% end %>

    <% if @jobs.length > 0 %>
      <h1>Work In Progress</h1>
      <div class="row">
        <div class="col-sm-8">
          <%= form_for :in_progress, url: save_progress_path do |f| %>
            
            <% @jobs.each do |job| %>
            
              <%= job.location_desc %> |
              <%= "#{job.street_address}, #{job.city}, #{job.state}" %>
              <div class="field">
                <%= f.label 'Work Status' %>
                <%= select_tag "#{job.id}", options_for_select(@in_prog_options) %>
              </div>
              
            <% end %>

            <div class="actions">
              <%= f.submit "Update", :class => 'btn btn-primary' %>
            </div>

          <% end %>
        </div>
        <div class="col-sm-4">
          <%= link_to 'Print List', print_list_path(format: "pdf"), :class => 'btn btn-primary' %>
          <a href="<%= @maps_params %>" class="btn btn-primary" target="_blank">Open in Google Maps</a>
        </div>
      </div>
      <div class="col-sm-12">
        <div style='border-bottom:4px solid #2f4f4f; margin-top:10px; margin-bottom:10px;'></div>
      </div>
    <% end %>

    <% if @future_jobs.length > 0 %>
      <h3>Future Confirmed Work</h3>
      <div class="row">
        <div class="col-sm-8">
          <%= form_for :in_progress, url: save_progress_path do |f| %>
            
            <% @future_jobs.each do |job| %>
            
              <%= job.location_desc %> |
              <%= "#{job.street_address}, #{job.city}, #{job.state}" %>
              <div class="field">
                <%= f.label 'Work Status' %>
                <%= select_tag "#{job.id}", options_for_select(@in_prog_options) %>
              </div>
              
            <% end %>

            <div class="actions">
              <%= f.submit "Update", :class => 'btn btn-primary' %>
            </div>

          <% end %>
        </div>
      </div>
      <div class="col-sm-12">
        <div style='border-bottom:4px solid #2f4f4f; margin-top:10px; margin-bottom:10px;'></div>
      </div>
    <% end %>

  </div>
</div>