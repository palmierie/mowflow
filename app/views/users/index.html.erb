<div class="row">
  <%= render :partial => 'partials/dashboard' %>

  <div class="col-xs-8 offset-md-1">
    <h1>Users</h1>

    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Email</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Delete</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', user, :class => 'btn btn-primary btn-sm' %></td>
            <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-primary btn-sm' %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New User', new_user_path, :class => 'btn btn-primary' %>
  </div>
</div>
